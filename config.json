{
    "log_directory": "./logs",

    "cpu_threshold": 85,
    "memory_threshold": 80,
    "disk_threshold": 90,

    "service_monitor": {
        "whitelist_file": "service_whitelist.txt",
        "check_interval": 60
    },
    "iptables_monitor": {
        "snapshot_file": "iptables_snapshot.txt",
        "check_interval": 60
    },
    "users_monitor": {
        "snapshot_file": "users_snapshot.txt",
        "check_interval": 60
    },
    "file_monitor": {
        "snapshot_file": "file_snapshot.txt",
        "monitored_files": ["/etc/passwd", "/etc/shadow", "/etc/hosts"],
        "check_interval": 60
    },
    "ssh_monitor": {
        "log_file": "/var/log/auth.log",
        "check_interval": 5
    }

}
